# Korean Stock Trading System - Environment Configuration

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/stock_trading

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# Price Monitor Service
# =============================================================================
PRICE_MONITOR_DATABASE_URL=postgresql://user:password@localhost:5432/stock_trading
PRICE_MONITOR_REDIS_HOST=localhost
PRICE_MONITOR_REDIS_PORT=6379
PRICE_MONITOR_REDIS_DB=0
PRICE_MONITOR_REDIS_PASSWORD=

# Polling interval in seconds (60-300, default: 60 = 1 minute)
PRICE_MONITOR_POLL_INTERVAL_SECONDS=60

# Significant change threshold percentage (default: 5.0%)
PRICE_MONITOR_SIGNIFICANT_CHANGE_THRESHOLD=5.0

# Logging
PRICE_MONITOR_LOG_LEVEL=INFO
PRICE_MONITOR_LOG_FILE=

# =============================================================================
# Korean Stock Market API Keys
# =============================================================================
# Korea Investment & Securities API
PRICE_MONITOR_KOREAINVESTMENT_API_KEY=
PRICE_MONITOR_KOREAINVESTMENT_API_SECRET=
PRICE_MONITOR_KOREAINVESTMENT_APP_KEY=
PRICE_MONITOR_KOREAINVESTMENT_APP_SECRET=

# KRX (Korea Exchange) API
KRX_API_KEY=

# =============================================================================
# Service URLs
# =============================================================================
DATA_COLLECTOR_URL=http://localhost:8001
INDICATOR_CALCULATOR_URL=http://localhost:8002
STOCK_SCREENER_URL=http://localhost:8003
TRADING_ENGINE_URL=http://localhost:8004
RISK_MANAGER_URL=http://localhost:8005

# =============================================================================
# General Settings
# =============================================================================
APP_NAME=Korean Stock Trading System
DEBUG=false
LOG_LEVEL=INFO

# Trading parameters
DEFAULT_STOP_LOSS_PCT=5.0
DEFAULT_TAKE_PROFIT_PCT=10.0
MAX_POSITION_SIZE_PCT=10.0
MAX_PORTFOLIO_RISK_PCT=2.0
