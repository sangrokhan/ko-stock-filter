FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    make \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy shared modules
COPY shared/ /app/shared/

# Copy service code
COPY services/watchlist_manager/ /app/services/watchlist_manager/

# Install dependencies
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

# Install service-specific dependencies if they exist
RUN if [ -f /app/services/watchlist_manager/requirements.txt ]; then \
    pip install --no-cache-dir -r /app/services/watchlist_manager/requirements.txt; \
    fi

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

WORKDIR /app/services/watchlist_manager

CMD ["python", "main.py"]
