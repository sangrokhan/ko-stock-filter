FROM stock-trading-base:latest

# Switch to root to copy service code
USER root

# Copy service code
COPY services/stock_scorer/ /app/services/stock_scorer/

# Install service-specific dependencies if they exist
RUN if [ -f /app/services/stock_scorer/requirements.txt ]; then \
    pip install --no-cache-dir -r /app/services/stock_scorer/requirements.txt; \
    fi

# Set ownership and switch back to appuser
RUN chown -R appuser:appuser /app
USER appuser

WORKDIR /app/services/stock_scorer

CMD ["python", "main.py"]
