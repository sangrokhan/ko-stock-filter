FROM python:3.12

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    make \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy shared modules
COPY shared/ /app/shared/

# Copy service code
COPY services/risk_manager/ /app/services/risk_manager/

# Install dependencies
COPY requirements.txt /app/
COPY services/risk_manager/requirements.txt /app/service_requirements.txt
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r service_requirements.txt

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Set Python path to include /app
ENV PYTHONPATH=/app:$PYTHONPATH

WORKDIR /app/services/risk_manager

CMD ["python", "main.py"]
