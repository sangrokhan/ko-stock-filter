# Production Environment Configuration Template
# Copy this file to .env and update with your production values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_USER=stock_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=stock_trading
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# API KEYS (REQUIRED)
# ============================================================================
# Korea Exchange API Key
KRX_API_KEY=your_krx_api_key_here

# Korea Investment & Securities API
KOREAINVESTMENT_API_KEY=your_koreainvestment_api_key
KOREAINVESTMENT_API_SECRET=your_koreainvestment_api_secret
KOREAINVESTMENT_ACCOUNT=your_account_number

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
# Enable paper trading (set to false for real trading)
PAPER_TRADING=true

# Risk management
MAX_PORTFOLIO_RISK_PCT=2.0
MAX_POSITION_SIZE_PCT=10.0
DEFAULT_STOP_LOSS_PCT=5.0
DEFAULT_TAKE_PROFIT_PCT=10.0

# Trading hours (Korea Time)
TRADING_START_HOUR=9
TRADING_END_HOUR=15

# ============================================================================
# SERVICE URLS (for orchestrator)
# ============================================================================
DATA_COLLECTOR_URL=http://localhost:8001
INDICATOR_CALCULATOR_URL=http://localhost:8002
STOCK_SCREENER_URL=http://localhost:8003
TRADING_ENGINE_URL=http://localhost:8004
RISK_MANAGER_URL=http://localhost:8005

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Log file locations
LOG_DIR=/opt/stock-trading/logs

# ============================================================================
# MONITORING & METRICS
# ============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ============================================================================
# TIMEZONE
# ============================================================================
TZ=Asia/Seoul

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_DIR=/opt/stock-trading/backups
BACKUP_RETENTION_DAYS=30

# ============================================================================
# SECURITY
# ============================================================================
# API authentication (if implemented)
API_SECRET_KEY=your_secret_key_here

# CORS settings
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
# Database connection pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Worker threads
WORKER_THREADS=4

# Request timeouts (seconds)
REQUEST_TIMEOUT=30
DB_QUERY_TIMEOUT=10

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AUTOMATIC_TRADING=false
ENABLE_NOTIFICATIONS=true
ENABLE_METRICS=true

# ============================================================================
# NOTIFICATION SETTINGS (Optional)
# ============================================================================
NOTIFICATION_EMAIL=your-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password

# Slack webhook (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================================
# DEVELOPMENT OVERRIDES (set in development only)
# ============================================================================
# DEBUG=true
# TESTING=false
